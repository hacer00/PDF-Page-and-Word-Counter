{
  "manifest_version": 3,
  "name": "PDF Sayfa & Kelime Sayacı",
  "version": "1.0",
  "description": "Yapıştırılan PDF linklerinden sayfa ve kelime sayısı çıkarır ve Excel'e indirir.",
  "permissions": ["storage", "sidePanel"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "PDF Sayfa & Kelime Sayacı",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "main.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
